
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>登录页面</title>
    <link rel="stylesheet" href="~/Content/style.css" />
    <link rel="stylesheet" href="~/Scripts/element/element.css" />
    <script src="~/Scripts/element/vue.js"></script>
    <script src="~/Scripts/element/element.js"></script>
</head>
<body>
    <div id="box" class="box">
        <div class="content">
            <div class="login-wrapper">
                <h1>登录</h1>
                <div class="login-form">
                    <div class="username form-item">
                        <span>账号</span>
                        <input type="text" class="input-item">
                    </div>
                    <div class="password form-item">
                        <span>密码</span>
                        <input type="password" class="input-item">
                    </div>
                    <button class="login-btn">登 录</button>
                </div>
                <div class="divider">
                    <span class="line"></span>
                    <span class="divider-text">其他方式登录</span>
                    <span class="line"></span>
                </div>
                <div class="other-login-wrapper">
                    <div class="other-login-item">
                        <img src="~/imgs/QQ.png" alt="QQ登录" v-on:click="loginQQ">
                    </div>
                    <div class="other-login-item">
                        <img src="~/imgs/WeChat.png" alt="微信登录" v-on:click="loginWeChat">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const vm = new Vue({
            el: "#box",
            data: {

            },
            methods: {
                loginQQ: function () {
                    this.$message('开发中！');
                },
                loginWeChat: function () {
                    this.$message('开发中！');
                }
            }
        })
    </script>
</body>
</html>
